---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<nav>
  <a href="/">
    <div class="logo">Srivats</div>
  </a>
  <ul class="links">
    <li><a href="/" class={pathname === "/" ? "active" : ""}>Home</a></li>
    <li>
      <a href="/blog" class={currentPath.startsWith("blog") ? "active" : ""}
        >Blog</a
      >
    </li>
    <li>
      <a
        href="/photography"
        class={currentPath.startsWith("photography") ? "active" : ""}
        >Photography</a
      >
    </li>
    <li>
      <a href="/shows" class={currentPath.startsWith("shows") ? "active" : ""}
        >Shows</a
      >
    </li>
  </ul>
</nav>

<style>
  nav {
    position: fixed;
    z-index: 900;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    /* max-width: 85rem; */
    margin-inline: auto;
    justify-content: space-between;
    height: 5rem;
    padding-inline: 1rem;
    background-color: var(--accent-700);
  }
  ul {
    display: flex;
    justify-content: space-evenly;
    list-style: none;
    width: 400px;
  }

  li {
    padding: 1rem;
    text-align: center;
    position: relative;
  }

  .links a {
    background-color: var(--accent-700);
    color: var(--gray-100);
    text-decoration: none;
    transition: color 250ms ease-in-out;
    font-size: 1.15rem;

    margin: auto;
  }

  .links a:hover::after,
  .links li > .active::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: -15px;
    height: 7px;
    background-color: var(--accent-300);
  }
</style>
